<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="css/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">

</head>
<body>
    <%- include("navbar.ejs") %>
     <main class="main-content mb-4 mb-md-5">
        <h1 class="blinking-yellow-bg display-5" id="dynamicText"></h1>
        <%- include("carousel.ejs") %>
        <%- include("midsection.ejs") %>
    </main>
    <div class="mb-5">
           <%- include("footer.ejs") %>
           </div>
    <script>
        // JavaScript for text transition
        const h1Element = document.getElementById("dynamicText");
        const textOptions = ["Your One-Stop Shopping Destination", "!!~Chinese New Year Sales~!!春节大促销!!","Members 20% off with every item purchased!!","会员购买每件商品享受八折优惠!!"];
        let currentIndex = 0;

        function changeText() {
            currentIndex = (currentIndex + 1) % textOptions.length;
            const dynamicText = textOptions[currentIndex];
            h1Element.textContent = dynamicText;
        }

        // Start changing the text automatically (e.g., every 2 seconds)
        setInterval(changeText, 5000);
    </script>
    <script src="js/js/bootstrap.bundle.min.js"></script>
 
</body>
</html>
