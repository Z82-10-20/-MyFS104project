    function increaseQuantity(productId) {
        if (productCounts[productId] === undefined) {
            productCounts[productId] = 1; // Initialize to 1 if not set
        } else {
            productCounts[productId]++; // Increment the count
        }

        // Update the quantity display for the product
        document.querySelector(`#${productId}`).textContent = productCounts[productId];

        // Update the total quantity display
        updateTotalQuantity();
