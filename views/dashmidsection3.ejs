        }

        if (productCounts[productId] > 0) {
            productCounts[productId]--; // Decrement the count
        }

        // Update the quantity display for the product
        document.querySelector(`#${productId}`).textContent = productCounts[productId];

        // Update the total quantity display
        updateTotalQuantity();
